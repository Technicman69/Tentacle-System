{
    "name": "§3§nTerror tendrils",
    "description": "Cast a dark spell, and breath a live into the darkness. From its depths come 6 pitch-black tentacles that will aid you in combat!",
    "type": "apoli:multiple",
    "toggle": {
        "type": "apoli:toggle",
        "active_by_default": false,
        "key": "key.origins.primary_active"
    },
    "toggle_check": {
        "type": "apoli:action_over_time",
        "interval": 1,
        "condition": {
            "type": "apoli:power_active",
            "power": "*:*_toggle"
        },
        "rising_action": {
            "type": "apoli:grant_power",
            "power": "*:tentacles/terror_tendrils",
            "source": "*:*"
        },
        "falling_action": {
            "type": "apoli:revoke_power",
            "power": "*:tentacles/terror_tendrils",
            "source": "*:*"
        }
    }
}